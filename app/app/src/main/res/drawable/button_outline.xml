<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下時背景變淡藍色，邊框依然藍色 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#3F51B5" />
            <solid android:color="#803F51B5" />  <!-- 半透明藍 -->
            <corners android:radius="12dp"/>
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp"/>
        </shape>
    </item>

    <!-- 其他狀態，透明底+藍色邊框 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#3F51B5" />
            <solid android:color="@android:color/transparent" />
            <corners android:radius="12dp"/>
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp"/>
        </shape>
    </item>

</selector>
